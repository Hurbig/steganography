<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="IDPA_Steganographie.GUI.MenuBar.MenuItemControl"
	x:Name="_MenuItem" Cursor="Arrow">

	<Grid x:Name="LayoutRoot" Margin="0,2,0,0">
		<Border x:Name="_itemBorderTemp" Background="#66E8F7F7" Visibility="Collapsed"/>
		<Border x:Name="_itemBorderActive" Background="#CC911212" Visibility="Collapsed" BorderThickness="0,1,1,1" BorderBrush="#B2FFFFFF"/>
        <DockPanel x:Name="ButtonContentPanel" LastChildFill="False" Background="#19000000">

            <TextBlock x:Name="_itemText" TextWrapping="Wrap" FontSize="15" Foreground="White" Padding="5,0" Margin="10,2,10,3" VerticalAlignment="Center">
                <Run Language="de-ch" Text="Fill Text"/>
            </TextBlock>
            <Image Width="20" Height="20" Margin="5" Name="Icon" RenderOptions.BitmapScalingMode="HighQuality" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</UserControl>