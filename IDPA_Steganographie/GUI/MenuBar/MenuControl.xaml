<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="IDPA_Steganographie.GUI.MenuBar.MenuControl"
	x:Name="UserControl">
    
    <UserControl.Resources>
        <LinearGradientBrush x:Key="BackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#7F000000"/>
            <GradientStop Color="#02000000" Offset="1"/>
            <GradientStop Color="#49000000" Offset="0.825"/>
            <GradientStop Color="#72000000" Offset="0.697"/>
            <GradientStop Color="#33000000" Offset="0.886"/>
            <GradientStop Color="#5D000000" Offset="0.764"/>
        </LinearGradientBrush>
    </UserControl.Resources>

    <Border BorderThickness="0" Margin="0" Name="_Border" >
        <StackPanel x:Name="LayoutRoot" Orientation="Vertical"/>
	</Border>
</UserControl>