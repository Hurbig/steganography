<UserControl x:Class="IDPA_Steganographie.GUI.MainScreen.MainScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:menuBar="clr-namespace:IDPA_Steganographie.GUI.MenuBar"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Border DockPanel.Dock="Left" BorderThickness="0,0,0,1" BorderBrush="Transparent" MinWidth="150" Margin="0">
            <menuBar:MenuControl MenuOrientation="Vertical" x:Name="MenuBar">
                <menuBar:MenuControl.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#7F232323" Offset="0"/>
                        <GradientStop Offset="1" Color="#07020202"/>
                        <GradientStop Color="#4C191919" Offset="0.321"/>
                        <GradientStop Color="#0C111111" Offset="0.75"/>
                    </LinearGradientBrush>
                </menuBar:MenuControl.Background>
            </menuBar:MenuControl>
        </Border>
        
        <Frame Name="NavigatorFrame" NavigationUIVisibility="Hidden" Margin="10,5,0,5"/>
    </DockPanel>
</UserControl>
